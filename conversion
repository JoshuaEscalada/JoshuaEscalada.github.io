<body>

  <h1>Temperature Converter</h1>
  
  <div class="container">
    <label for="temperature">Enter Temperature:</label>
    <input type="number" id="temperature" placeholder="Enter temperature">
    
    <label for="unit">Select Unit:</label>
    <select id="unit">
      <option value="F">Fahrenheit to Celsius</option>
      <option value="C">Celsius to Fahrenheit</option>
    </select>
    
    <button onclick="convertTemperature()">Convert</button>
    
    <div id="result" class="result"></div>
  </div>

  <script>
    function convertTemperature() {
      var temperature = parseFloat(document.getElementById('temperature').value);
      var unit = document.getElementById('unit').value;
      var resultText = '';

      if (isNaN(temperature)) {
        resultText = 'Please enter a valid temperature!';
      } else {
        if (unit === 'F') {
          // Convert Fahrenheit to Celsius
          var celsius = (temperature - 32) * 5 / 9;
          resultText = temperature + '째F is equal to ' + celsius.toFixed(2) + '째C';
        } else {
          // Convert Celsius to Fahrenheit
          var fahrenheit = (temperature * 9 / 5) + 32;
          resultText = temperature + '째C is equal to ' + fahrenheit.toFixed(2) + '째F';
        }
      }

      document.getElementById('result').innerText = resultText;
    }
  </script>

</body>
